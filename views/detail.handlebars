<form action="/todos/{{{todo.id}}}/delete?_method=DELETE" method="post" style="display:inline;">
    <div class="input-group">
        <div class="input-group-prepend">
            <div class="input-group-text">
                <input type="checkbox" name="done" {{#if todo.done}}checked{{/if}} disabled>
            </div>
        </div>
        <input type="text" class="form-control" value="{{{todo.name}}}">
        <div class="input-group-append">
            <a href="/todos/{{{todo.id}}}/edit" class="btn btn-success">edit</a>
            <button type="submit" class="btn btn-danger">Delete</button>
        </div>
    </div>
</form>